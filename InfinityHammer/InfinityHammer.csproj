    <Reference Include="WorldEditCommands.dll">
      <HintPath>..\..\Libs\WorldEditCommands.dll</HintPath>
    </Reference>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Argo\Argo.csproj" />
  </ItemGroup>  
  
</Project>
